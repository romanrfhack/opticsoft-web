{
  "name": "Opticsoft",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:css": "npx @tailwindcss/cli -i ./src/tailwind.css -o ./src/output.css --minify",
    "build": "npm run build:css && ng build --configuration production",
    "start": "npm run build:css && ng serve"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.4",
    "@angular/cdk": "^20.2.2",
    "@angular/common": "^20.3.4",
    "@angular/compiler": "^20.3.4",
    "@angular/core": "^20.3.4",
    "@angular/forms": "^20.3.4",
    "@angular/material": "^20.2.2",
    "@angular/platform-browser": "^20.3.4",
    "@angular/router": "^20.3.4",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "apexcharts": "^5.3.5",
    "chart.js": "^4.5.0",
    "ng-apexcharts": "^2.0.3",
    "ng2-charts": "^8.0.0",
    "ngx-mask": "^20.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.8.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.4",
    "@angular/cli": "^20.3.4",
    "@angular/compiler-cli": "^20.3.4",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.2"
  }
}
